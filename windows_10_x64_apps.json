{
  "builders": [
    {
      "type": "virtualbox-iso",
      "communicator": "winrm",
      "vm_name": "{{user `vm_product`}}-v{{isotime \"20060102\"}}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "output_directory": "output/windows_10_x64_apps",
      "headless": true,
      "boot_wait": "2m",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "1h",
      "guest_os_type": "Windows10_64",
      "disk_size": 61440,
      "hard_drive_interface": "sata",
      "hard_drive_nonrotational": true,
      "hard_drive_discard": true,
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/fixnetwork.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/win-updates.ps1",
        "./scripts/disable-winrm.ps1",
        "./scripts/enable-winrm.ps1",
        "./scripts/openssh.ps1",
        "./scripts/oracle-cert.cer"
      ],
      "export_opts":
      [
        "--manifest",
        "--vsys", "0",
        "--product", "{{user `vm_product`}}",
        "--description", "{{user `vm_description`}}",
        "--version", "v{{isotime \"20060102\"}}"
      ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "storagectl",
          "{{.Name}}",
          "--name",
          "SATA Controller",
          "--hostiocache",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "scripts": [
        "./scripts/disable-windows-defender.ps1"
      ]
    },
    {
      "type": "file",
      "source": "doit",
      "destination": "C:/"
    },
    {
      "type": "windows-shell",
      "scripts": [
        "./scripts/vm-guest-tools.bat",
        "./scripts/vagrant-ssh.bat",
        "./scripts/enable-rdp.bat",
        "./scripts/compile-dotnet-assemblies.bat",
        "./scripts/chocolatey.bat",
        "./scripts/chocolatey-packages.bat"
      ]
    },
    {
      "type": "powershell",
      "scripts": [
        "./scripts/setBrowserDefaults.ps1"
      ]
    },
    {
      "type": "windows-shell",
      "scripts": [
        "./scripts/firewall.bat",
        "./scripts/doit.bat",
        "./scripts/clean.bat",
        "./scripts/compact.bat",
        "./scripts/enableUAC.bat"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "boxes/windows10-eval-x64-Apps-{{.Provider}}-v{{isotime \"20060102\"}}.box",
      "vagrantfile_template": "vagrantfile-windows_10-x64.template" 
    }
  ],
  "variables": {
    "iso_url": "http://care.dlservice.microsoft.com/dl/download/6/5/D/65D18931-F626-4A35-AD5B-F5DA41FE6B76/16299.15.170928-1534.rs3_release_CLIENTENTERPRISEEVAL_OEMRET_x64FRE_en-us.iso",
    "iso_checksum_type": "sha1",
    "iso_checksum": "3b5f9494d870726d6d8a833aaf6169a964b8a9be",
    "autounattend": "./answer_files/10_64/Autounattend.xml",
    "vm_product": "windows10-eval-x64-Apps",
    "vm_description": "Windows 10 Evaluation version for testing"
  }
}
