{
  "variables": {
    "vm_arch": "x86",
    "vm_version": "LTSC",
    "vm_product": "windows10-{{user `vm_version`}}-eval-{{user `vm_arch`}}-Universal",
    "vm_description": "Windows 10 {{user `vm_version`}} {{user `vm_arch`}} Evaluation version for testing with Univerals dependencies"
  },
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "./output/windows_10_{{user `vm_arch`}}_{{user `vm_version`}}_base/windows10-eval-{{user `vm_arch`}}-v{{isotime \"20060102\"}}.ovf",
      "communicator": "winrm",
      "vm_name": "{{user `vm_product`}}-v{{isotime \"20060102\"}}",
      "output_directory": "output/{{user `vm_product`}}",
      "headless": true,
      "boot_wait": "2m",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "15m",
      "guest_additions_mode" : "attach",
      "export_opts":
      [
        "--manifest",
        "--vsys", "0",
        "--product", "{{user `vm_product`}}",
        "--description", "{{user `vm_description`}}",
        "--version", "v{{isotime \"20060102\"}}"
      ],
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "8192" ],
        [ "modifyvm", "{{.Name}}", "--vrde", "off" ],
        [ "modifyvm", "{{.Name}}", "--vram", "128" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "4" ],
        [ "modifyvm", "{{.Name}}", "--graphicscontroller", "vboxsvga" ],
        [ "storagectl", "{{.Name}}", "--name", "SATA Controller", "--hostiocache", "on" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "scripts": [
        "./scripts/universal-tools.ps1"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "boxes/{{user `vm_product`}}-{{.Provider}}-v{{isotime \"20060102\"}}.box",
      "vagrantfile_template": "vagrantfile-windows_10-{{user `vm_arch`}}.template"
    }
  ]
}